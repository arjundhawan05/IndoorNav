<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateMap">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/MapNamePlainText"
            android:layout_width="189dp"
            android:layout_height="38dp"
            android:text="@string/enter_the_map_name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="19sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"/>

        <EditText
            android:id="@+id/MapNameEditText"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/enter_the_map_name"
            android:inputType="textPersonName"
            android:textSize="19sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"/>
        <Button
            android:id="@+id/CreateMap"
            android:layout_width="189dp"
            android:layout_height="38dp"
            android:background="@android:color/holo_green_light"
            android:onClick="onCreateMapButtonClick"
            android:text="@string/send"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="19sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>